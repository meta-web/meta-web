footer#footer
    .links
        if config.footer_links
            nav#footer-links
                ul(class=( config.footer_text ? "right" : null ))
                    each item in config.footer_links
                        li: a(href=item.link, target=item.target)
                            if item.icon
                                i(class=[ "mdi", "mdi-" + item.icon, "icon" ])
                            if item.label
                                !=item.label

    .signature
        if config.footer_text
            p(class=[ "text", ( config.footer_links ? "left" : null ) ])!=config.footer_text

    #created-by
      a(href="https://github.com/metaplatform/meta-doc", target="_blank")
        span.center
          i.mdi.mdi-book-open-variant
          span.sub Generated by 
          span.bold META
          span  Doc

include ./lightbox.jade