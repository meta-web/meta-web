doctype html
html(lang="en")
  head
    include ./head.jade

  body.landing#top

    include ./header.jade

    div#main

      article#page
        if page.excerptHtml && !config.excerpt_hidden
          header.excerpt
            img.logo(src="{{assets}}/metaweb-logo.svg", width="160")
            div.content!=page.excerptHtml
            .clear

        - var directoryOpened = false;

        each section, id in sections
          if section.type == "page"
            if !section.hidden
              if !directoryOpened
                !='<section class="directory">'
                - directoryOpened = true

              div.item
                a(href="{{base}}#{section.id}", class={ "page-link": true, "with-excerpt": section.excerpt })
                  i(class=[ "mdi", ( section.icon ? "mdi-" + section.icon : "mdi-book-open" ), "icon" ])
                  =section.label

          else
            if directoryOpened
              !='<div class="clear"></div></section>'
              - directoryOpened = false

            section.section
              div.anchor(id=section.anchor)
              div.content
                !=section.html
                .clear

        if directoryOpened
          !='<div class="clear"></div></section>'
          - directoryOpened = false

        include ./footer-section.jade

      footer#bottom-line
        #created-by
          a(href="https://github.com/metaplatform/meta-doc", target="_blank")
            span.center
              i.mdi.mdi-book-open
              span.sub Generated by 
              span.bold META
              span  Doc

    include ./lightbox.jade